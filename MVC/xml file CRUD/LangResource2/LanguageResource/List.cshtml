@model List<SelectListItem>

@section PageToolBar
    {
    @Html.PageMenu2((EditorPageMenu)ViewBag.PageMenu, "navbar-nav ml-auto navbar-toolbar")
}
@section MobilePageToolBar
    {
    @Html.PageMenu2Mobile((EditorPageMenu)ViewBag.PageMenu)
}
<div class="portlet">
    <div class="portlet__body">
        <div class="row col-12">
            <div class="col-3">
                <label>@XmlLangHtmlExtender.L("LanguageResource_label")</label>
            </div>
            <div class="col-4">
                <select class="form-control" id="languageSelect">
                    @foreach (var item in Model)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
            </div>
        </div>
    </div>
</div>
<div class="portlet">
    <div class="portlet__body">
        <div id="listLanguageXml" class="table-container">
        </div>
    </div>
</div>


<script type="text/javascript">
    $(document).ready(function () {
        var dil = $("#languageSelect").val();
        LoadUrlToDiv('@Url.Action("ListView2", "LanguageResource")' + '?subId=' + dil, 'listLanguageXml');

        $("#languageSelect").change(function () {
            LoadUrlToDiv('@Url.Action("ListView2", "LanguageResource")' + '?subId=' + $(this).val(), 'listLanguageXml');
        });
    });
</script>


