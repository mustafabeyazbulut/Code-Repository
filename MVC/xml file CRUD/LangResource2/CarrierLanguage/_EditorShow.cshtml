@model CarrierLanguage

<div class="portlet">
    <div class="portlet__body">
        <div class="row">
            <div class="col-12 col-lg-12">
                <div class="form-group row mb-2">
                    @Html.LabelFor(d => d.languageName, new { @class = "control-label col-4" })
                    <div class="col-8">
                        @Html.TextBoxFor(d => d.languageName, new { @class = "form-control",@disabled="disabled" })
                    </div>
                </div>
                <div class="form-group row mb-2">
                    @Html.LabelFor(d => d.languageCode, new { @class = "control-label col-4" })
                    <div class="col-8">
                        @Html.TextBoxFor(d => d.languageCode, new { @class = "form-control",@disabled="disabled" })
                    </div>
                </div>
                <div class="form-group row mb-2">
                    @Html.LabelFor(d => d.FlagImage, new { @class = "control-label col-4" })
                    <div class="col-8">
                        @Html.TextBoxFor(d => d.FlagImage, new { @class = "form-control",@disabled="disabled" })
                    </div>
                </div>
                <div class="form-group row mb-2">
                    <div class="control-label col-4"></div>
                    <div class="col-8">
                        <img src="~/Store/Carrier/CarrierLanguage/@Model.FlagImage" alt="@Model.FlagImage" class="CarrierLanguageFlagImage">
                    </div>
                </div>          
                <div class="form-group row mb-2">
                    @Html.LabelFor(d => d.IsDefault, new { @class = "control-label col-4" })
                    <div class="col-1">
                        @Html.CheckBoxFor(d => d.IsDefault, new { @class = "form-control-sm",@disabled="disabled" })
                        
                    </div>
                </div>
                <div class="form-group row mb-2">
                    @Html.LabelFor(d => d.IsDeleted, new { @class = "control-label col-4" })
                    <div class="col-8">
                        @Html.CheckBoxFor(d => d.IsDeleted, new { @class = "form-control-sm",@disabled="disabled"  })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>