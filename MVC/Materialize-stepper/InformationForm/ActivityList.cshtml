<div class="row justify-content-center mb-4">
    <div class="col-12 col-md-12 col-lg-10">
        <div class="row justify-content-center">
            <div class="col-4 col-md-4 col-lg-3 mb-4">
                <button type="button" onclick="funLoading()" class="btn btn-default btn-block custom-btn">
                    @XmlCarrierLangHtmlExtender.L("step2_loading")
                </button>
            </div>
            <div class="col-4 col-md-4 col-lg-3 mb-4">
                <button type="button" onclick="funUnloading()" class="btn btn-default btn-block custom-btn">
                    @XmlCarrierLangHtmlExtender.L("step2_unloading")
                </button>
            </div>
            <div class="col-4 col-md-4 col-lg-3 mb-4">
                <button type="button" onclick="funWeighing()" class="btn btn-default btn-block custom-btn">
                    @XmlCarrierLangHtmlExtender.L("Step2_weighing")
                </button>
            </div>
        </div>
    </div>
    <div class="col-12 col-md-12 col-lg-10">
        <div class="row justify-content-center">
            <div class="col-4 col-md-4 col-lg-3 mb-4">
                <button type="button" onclick="funLoading()" class="btn btn-default btn-block custom-btn">
                    @XmlCarrierLangHtmlExtender.L("step2_loading")
                </button>
            </div>
            <div class="col-4 col-md-4 col-lg-3 mb-4">
                <button type="button" onclick="funUnloading()" class="btn btn-default btn-block custom-btn">
                    @XmlCarrierLangHtmlExtender.L("step2_unloading")
                </button>
            </div>
 
        </div>
    </div>
</div>



<script>
    var activeButton = null;

    function setActiveButton(btn) {
        if (activeButton) {

            activeButton.classList.remove("active-btn");
            activeButton.classList.add("btn-default");
        }
        btn.classList.remove("btn-default");
        btn.classList.add("active-btn");
        activeButton = btn;
    }


    function funLoading() {
        action1=true;
        LoadUrlToDiv('@Url.Action("InformationFormEditor", "InformationForm", new { activity = CarrierActivity.Loading })', 'divOperationList');
        setActiveButton(event.target);
        stepperInstace.nextStep();
    }

    function funUnloading() {
        action1 = true;
        LoadUrlToDiv('@Url.Action("InformationFormEditor", "InformationForm", new { activity = CarrierActivity.Unloading })', 'divOperationList');
        setActiveButton(event.target);
        stepperInstace.nextStep();
    }

    function funWeighing() {
        action1 = true;
        LoadUrlToDiv('@Url.Action("InformationFormEditor", "InformationForm", new { activity = CarrierActivity.Weighig })', 'divOperationList');
        setActiveButton(event.target);
        stepperInstace.nextStep();
    }
</script>
